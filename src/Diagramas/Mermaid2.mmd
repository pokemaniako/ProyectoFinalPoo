classDiagram
    class Interfaz {
        + input() : string
        <<ui>>
    }

    class Validador {
        + Validador(dato, tipo) : any
        + ValidarMontoPositivo(monto) : bool
        + ValidarNumeroRuleta(numero) : bool
        + ValidarNumerosDado(numeros) : bool
        <<utility>>
    }

    class Menu {
        + MenuDeInicio() : void
        + MenuJugador(j : Jugador) : void
        <<controller>>
    }

    class ApuestasModule {
        + ApostarRojoNegro(j : Jugador) : void
        + Ruleta(j : Jugador) : void
        + LanzaElDado(j : Jugador) : void
        <<module>>
    }

    class Jugador {
        - Saldo : float
        - Apuestas : list
        + ConsultarSaldo() : float
        + ActualizarSaldo(monto : float) : float
        + AgregarApuesta(ap : dict) : void
        + ObtenerHistorial() : list
        <<entity>>
    }

    class Data {
        + AddApuesta(ap : dict) : void
        <<persistence>>
    }

    class Graficos {
        + GuardarApuestaCsv(ap : dict) : void
        + GraficarApuestasPorUsuario(nombre : string) : void
        <<persistence>>
    }

    Interfaz --> Validador : "input() -> Validador"
    Validador --> Menu : "datos validados"
    Menu --> ApuestasModule : "llama"
    ApuestasModule --> Jugador : "actualiza saldo / agrega apuesta"
    ApuestasModule --> Data : "data.AddApuesta"
    Data --> Graficos : "persiste (CSV/XLSX)"
